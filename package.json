{
  "name": "multiplayer-music-quiz",
  "version": "3.2.0",
  "description": "Multiplayer music quiz game with Socket.IO and real-time gameplay",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "start": "node src/server/index.js",
    "dev": "node esbuild.config.js && nodemon --watch src/ --ext js,html,css -x \"node esbuild.config.js && node src/server/index.js\"",
    "dev:server": "nodemon src/server/index.js --watch src/server/",
    "build": "node esbuild.config.js",
    "build:watch": "node esbuild.config.js --watch",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "test": "npx playwright test",
    "test:ui": "npx playwright test --ui",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "test:report": "npx playwright show-report",
    "test:install": "npx playwright install chromium",
    "electron:dev": "npm run build && electron .",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "music",
    "quiz",
    "game",
    "multiplayer",
    "socket.io",
    "real-time",
    "web-game",
    "audio",
    "nodejs",
    "javascript",
    "electron",
    "desktop"
  ],
  "author": "Music Quiz Developer",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "multer": "2.0.h2",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "electron-store": "^8.2.0",
    "better-sqlite3": "^11.0.0",
    "music-metadata": "^10.0.0",
    "extract-zip": "^2.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "nodemon": "^3.0.2",
    "prettier": "^3.7.4",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "@electron/rebuild": "^3.7.0"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/multiplayer-music-quiz.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/multiplayer-music-quiz/issues"
  },
  "homepage": "https://github.com/yourusername/multiplayer-music-quiz#readme"
}
